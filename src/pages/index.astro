---
import PostList from "../components/PostList.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="psoder.net">
    <div class="mx-auto max-w-4xl flex flex-col gap-6 py-8">
        <header>
            <h1 class="font-bold tracking-tight">Hello, I'm Pontus</h1>
        </header>

        <section>
            <header>
                <h2 class="font-bold tracking-tight">Blog</h2>
                <p class="mt-2 text-sm opacity-70">
                    Writing about things I'm working on and find interesting
                </p>
            </header>

            <PostList />
        </section>
    </div>
</Layout>

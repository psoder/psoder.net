---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts: CollectionEntry<"blog">[] = await getCollection("blog");
---

<Layout title="Blog">
    <h1>Posts</h1>
    <ul>
        {
            posts.map((post) => (
                <li>
                    <a href={`/blog/${post.id}`}>
                        {post.data.title} ({post.data.publicationDate})
                    </a>
                </li>
            ))
        }
    </ul>
</Layout>

---
import { Image } from "astro:assets";
import quack from "../assets/quack.jpeg";
import type { Project } from "../types/types.ts";

interface Props {
    project: Project;
}

const { project } = Astro.props;
---

<div class="flex flex-col md:flex-row rounded-lg shadow-sm bg-ctp-mantle p-4">
    <div class="grid gap-3 flex-1">
        <div class="font-bold text-3xl">{project.title}</div>
        <a href={project.url}>{project.url}</a>
        <p>{project.description}</p>
    </div>

    <Image src={quack} alt="quack" width={300} height={300} class="rounded-lg object-cover" />
</div>
